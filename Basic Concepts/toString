// how to iterate through the digits of a number in JS

let num = 12345;

//convert to string
let numStr = num.toString();

// iterate through it
for(let i = 0; i < numStr.length; i++){
    console.log(numStr.charAt(i)); 
}

//convert back to digit
for(let i = 0; i <numStr.length; i++){
    let digit = parseInt(numStr.charAt(i), 10);
    console.log(digit);
}



